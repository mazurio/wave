<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Title"
                app:typeface="roboto_condensed_bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Author"
                app:typeface="roboto_condensed_light"
                android:padding="10dp" />

            <!-- Card -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="320dp"
                android:orientation="vertical"
                android:layout_margin="@dimen/card_margin"
                android:background="@drawable/card">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="320dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cover"
                        android:layout_width="200dp"
                        android:layout_height="300dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/card_bottom"
                        android:paddingTop="@dimen/card_padding_top"
                        android:paddingLeft="@dimen/card_padding_left"
                        android:paddingRight="@dimen/card_padding_right"
                        android:paddingBottom="@dimen/card_padding_bottom">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Card -->

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                app:typeface="roboto_condensed_light"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>